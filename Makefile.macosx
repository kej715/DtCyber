            channel.o               \
            charset.o               \
            console.o               \
            cp3446.o                \
            cpu.o                   \
            cr3447.o                \
            cr405.o                 \
            dcc6681.o               \
            dd6603.o                \
            dd8xx.o                 \
            dd885-42.o              \
            ddp.o                   \
            deadstart.o             \
            device.o                \
            dump.o                  \
            float.o                 \
            init.o                  \
            interlock_channel.o     \
            log.o                   \
            lp1612.o                \
            lp3000.o                \
            main.o                  \
            maintenance_channel.o   \
            mdi.o                   \
            mt362x.o                \
            mt5744.o                \
            mt607.o                 \
            mt669.o                 \
            mt679.o                 \
            mux6676.o               \
            npu_async.o             \
            npu_bip.o               \
            npu_hasp.o              \
