dtcyber: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $+ $(LIBS)

all: clean dtcyber

clean:
	rm -f *.o

%.o : %.c $(HDRS)
	$(CC) $(CFLAGS) -c $<

